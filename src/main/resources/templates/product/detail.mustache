{{> layout/header}}
<div class="container w14 sub-page" style="margin: 0 auto;">

    <!--상품 상세보기 페이지 시작-->
    {{#sessionUser}}
        <!--개인 로그인시-->
        {{#isCheck}}
            <form action="/order/{{product.id}}/add" method="post">
                <div class="d-flex prodsav-W">
                    <!--상품이미지-->
                    <div class="prodsave-L">
                        <div class="mb-3 mt-3"
                             style="width: 400px; height: 400px; border: 1px solid #ddd; color: #ddd; overflow: hidden">
                            <img src="/upload/{{product.img}}" alt="Product Image"
                                 style="max-width: 100%; max-height: 100%;">
                        </div>
                    </div>
                    <!--상품이미지-->

                    <!--구매정보 체크-->
                    <div class="prodsave-R ml-10">
                        <!--상품 table-->
                        <table class="prod-info">
                            <!--상품명-->
                            <tr>
                                <th>상품명</th>
                                <td>
                                    <input id="name" name="name" type="text" class="form-control"
                                           value="{{product.name}}" disabled style="width: 100%">
                                </td>
                            </tr>
                            <!--상품명-->

                            <!--상품가격-->
                            <tr>
                                <th>상품가격</th>
                                <td colspan="2">
                                    <input name="price" type="number" class="form-control price"
                                           value="{{product.price}}" disabled style="width: 100%">
                                </td>
                            </tr>
                            <!--상품가격-->

                            <!--상품수량-->
                            <tr>
                                <th>상품수량</th>
                                <td colspan="2">
                                    <!-- 상품의 구매 수량만큼 표시됩니다 -->
                                    <div class="quantity-controls d-flex"
                                         style="width: 100px; text-align: center; ">
                                        <button type="button" class="decrease-btn" aria-label="수량내리기" style="">-</button>
                                        <input type="text" class="quantity" name="orderQty" value="{{product.id}}"
                                               style="text-align: center; ">
                                        <button type="button" class="increase-btn" aria-label="수량올리기">+</button>
                                    </div>
                                </td>
                            </tr>
                            <!--상품수량-->
                        </table>
                        <!--상품 table-->

                        <!--장바구니 btn-->
                        <div class="row pr-5 pt-5" style="">
                            <button class="btn btn-mint" type="submit" height="36" radius="3">
                                <span class="">장바구니 담기</span>
                            </button>
                        </div>
                        <!--장바구니 btn-->
                    </div>
                    <!--구매정보 체크-->
                </div>
            </form>
        {{/isCheck}}
        <!--개인 로그인시-->

        <!--판매자 로그인시-->
        {{^isCheck}}
            <div class="d-flex prodsav-W">
                <!--상품 이미지-->
                <div class="prodsave-L">
                    <div class="p-3 m-3">
                        <div class="row">
                            <div class="d-flex justify-content-center align-items-cente saveImg"
                                 style="" id="profilePreview">
                                <!-- 이미지를 표시하는 부분 업데이트로 가서 수정한다 -->
                                <img src="/upload/{{product.img}}" style="max-width: 100%; max-height: 100%;">
                            </div>
                        </div>
                    </div>
                </div>
                <!--상품 이미지-->

                <!--상품 수정-->
                <div class="prodsave-R ml-10">
                    <div class="d-flex mb-3 mt-3 row">
                        <table class="prod-info">
                            <!--상품명-->
                            <tr>
                                <th>상품명</th>
                                <td>
                                    <input id="name" name="name" type="text" class="form-control"
                                           value="{{product.name}}" disabled
                                           style="width: 98%">
                                </td>
                                <td>
                                    <button type="button" onclick="nameSameCheck()"
                                            class="btn btn-outline-mint ml-10">상품중복체크
                                    </button>
                                </td>
                            </tr>
                            <!--상품명-->

                            <!--상품가격-->
                            <tr>
                                <th>상품가격</th>
                                <td colspan="2">
                                    <input name="price" type="number" class="form-control price"
                                           value="{{product.price}}" disabled
                                           style="width: 100%">
                                </td>
                            </tr>
                            <!--상품가격-->

                            <!--상품수량-->

                            <!--상품수량-->
                            <tr>
                                <th>상품수량</th>
                                <td colspan="2">
                                    <!-- 상품의 구매 수량만큼 표시됩니다 -->
                                    <div class="quantity-controls d-flex"
                                         style="width: 100px; text-align: center; ">
                                        <button type="button" class="decrease-btn" aria-label="수량내리기" style="">-</button>
                                        <input type="text" class="quantity" name="orderQty" value="{{product.qty}}"
                                               style="text-align: center; " >
                                        <button type="button" class="increase-btn" aria-label="수량올리기">+</button>
                                    </div>
                                </td>
                            </tr>
                            <!--상품수량-->

<!--                            <tr>-->
<!--                                <th>상품수량</th>-->
<!--                                <td colspan="2">-->
<!--                                    <input name="qty" type="number" class="form-control col ml-5"-->
<!--                                           value="product.qty}}" disabled>-->
<!--                                </td>-->
<!--                            </tr>-->
                            <!--상품수량-->
                        </table>

                        <div class="line" style="border-bottom:1px solid #ddd; margin: 50px auto"></div>

                        <!--수정,삭제 버튼부분-->
                        <div class="d-flex" style="justify-content: flex-end">
                            <span><a href="/product/{{id}}/update-form" class="btn btn-mint">수정가기</a></span>
                            <span class="ml-20">
                                <form action="/product/{{id}}/delete" method="post">
                                    <button class="btn btn-mint">삭제하기</button>
	                            </form>
                            </span>
                        </div>
                        <!--수정,삭제 버튼부분-->

                    </div>
                </div>
            </div>
        </div>
    {{/isCheck}}
    <!--판매자 로그인시-->
{{/sessionUser}}

<!--비회원 로그인시-->
{{^sessionUser}}

{{/sessionUser}}

</div>
<!--상품 상세보기 페이지 완료-->






{{> layout/footer}}