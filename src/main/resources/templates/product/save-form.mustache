                        <tr>
                            <th>상품가격</th>
                            <td colspan="2">
                                <input name="price" id="pPrice" type="text" class="form-control price price-class"
                                       placeholder="상품 가격을 적어주세요." style="width: 100%">
                            </td>
                        </tr>
                        <!--상품가격-->

                        <!--상품수량-->
